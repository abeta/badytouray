<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="options">
            <field name="date" type="datetime" label="Date" filter="date" class="form-control" admintable="true" />
            <field name="location" type="text" label="Location" filter="string" class="form-control" admintable="true" />
            <field name="image" type="media" label="Image" filter="string" class="form-control" />
            <field name="result" type="list" default="" label="Result" description="" admintable="true">
                <option value=""></option>
                <option value="w">Win</option>
                <option value="l">Lose</option>
                <option value="d">Draw</option>
            </field>
        </fieldset>
        <fieldset name="tickets">
            <field name="ticket[1]" type="text" label="Ticket 1 Name" filter="string" class="form-control" default="Standard Ticket" />
            <field name="price[1]" type="text" label="Ticket 1 Price" filter="int" class="form-control" />
            <field name="ticket[2]" type="text" label="Ticket 2 Name" filter="string" class="form-control" default="VIP Ticket" />
            <field name="price[2]" type="text" label="Ticket 2 Price" filter="int" class="form-control" />
            <field name="ticket[3]" type="text" label="Ticket 3 Name" filter="string" class="form-control" default="Ringside Ticket" /> />
            <field name="price[3]" type="text" label="Ticket 3 Price" filter="int" class="form-control" />
            <field name="ticket[4]" type="text" label="Ticket 4 Name" filter="string" class="form-control" />
            <field name="price[4]" type="text" label="Ticket 4 Price" filter="int" class="form-control" />
            <field name="ticket[5]" type="text" label="Ticket 5 Name" filter="string" class="form-control" />
            <field name="price[5]" type="text" label="Ticket 5 Price" filter="int" class="form-control" />
        </fieldset>
    </fields>
</form>
