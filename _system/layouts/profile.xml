<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="profile">
            <field name="name" type="text" label="Name" filter="string" class="form-control" />
            <field name="height" type="text" label="Height" filter="string" class="form-control" />
            <field name="weight_class" type="text" label="Weight Class" filter="string" class="form-control">            
                <option value="Heavyweight">Heavyweight</option>
                <option value="Cruiserweight">Cruiserweight</option>
                <option value="Light heavyweight">Light heavyweight</option>
                <option value="Super middleweight">Super middleweight</option>
                <option value="Middleweight">Middleweight</option>
                <option value="Super welterweight">Super welterweight</option>
                <option value="Welterweight">Welterweight</option>
                <option value="Super lightweight">Super lightweight</option>
                <option value="Lightweight">Lightweight</option>
                <option value="Super featherweight">Super featherweight</option>
                <option value="Featherweight">Featherweight</option>
            </field>
            <field name="nationality" type="text" label="Nationality" filter="string" class="form-control" />
            <field name="birthday" type="text" label="Birthday" filter="string" class="form-control" />
            <field name="hometown" type="text" label="Hometown" filter="string" class="form-control" />
            <field name="coach" type="text" label="Coach" filter="string" class="form-control" />
            <field name="inspiration" type="text" label="Inspiration" filter="string" class="form-control" />
            <field name="avatar" type="media" label="Profile Picture" filter="string" class="form-control" />
        </fieldset>
    </fields>
</form>
